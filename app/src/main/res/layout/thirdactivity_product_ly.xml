<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_marginTop="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_product_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Client Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:paddingHorizontal="12dp"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:gravity="center_vertical">-->

<!--                    <TextView-->
<!--                        android:id="@+id/et_Client_Name"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:text="Select Client"-->
<!--                        android:textSize="15sp"-->
<!--                        android:textColor="#333" />-->

<!--                    <ImageView-->
<!--                        android:id="@+id/client_arrow"-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        android:src="@drawable/up_arrow"-->
<!--                        app:tint="@color/gray" />-->
<!--                </LinearLayout>-->
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btn_remove_product"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete"
                app:tint="#D32F2F" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="4dp" />

        <!-- PRODUCT SELECTOR -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardElevation="1dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Product"
                android:textSize="15sp"
                android:textColor="#333" />

            <ImageView
                android:id="@+id/product_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/up_arrow"
                app:tint="@color/gray" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View android:layout_width="match_parent" android:layout_height="4dp" />

    <!-- HSN / QTY / TOTAL -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <EditText
                android:id="@+id/et_hsn_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="HSN"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:padding="8dp" />

            <EditText
                android:id="@+id/et_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Qty"
                android:inputType="number"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#333" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View android:layout_width="match_parent" android:layout_height="4dp" />

    <!-- GST SECTION -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="SGST"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@android:color/transparent" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="CGST"
                android:inputType="number"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@android:color/transparent" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="GST"
                android:inputType="number"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
