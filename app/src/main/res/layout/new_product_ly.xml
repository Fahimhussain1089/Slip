<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FBFBFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <!-- Client Name Dropdown -->
        <LinearLayout
            android:id="@+id/client_name_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_blue"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tool:visibility="visible">

            <TextView
                android:id="@+id/et_Client_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Client"
                android:textColor="#000"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/client_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/downarrow"
                app:tint="@color/gray" />
        </LinearLayout>

        <!-- Description Dropdown -->
        <LinearLayout
            android:id="@+id/description_of_goods_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_blue"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description of Goods"
                android:textColor="#000"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/product_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/downarrow"
                app:tint="@color/gray" />
        </LinearLayout>

        <!-- HSN & QTY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/et_hsn_code"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="HSN Code"
                android:inputType="text"
                android:background="@drawable/edittext_rounded"
                android:padding="12dp"
                android:layout_marginEnd="6dp" />

            <EditText
                android:id="@+id/et_qty"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="QTY"
                android:inputType="number"
                android:background="@drawable/edittext_rounded"
                android:padding="12dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>


        <!-- Price & Remove Button -->
        <!-- Price & Remove Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/et_rate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext_rounded"
                android:padding="12dp"
                android:layout_marginEnd="6dp" />

            <ImageButton
                android:id="@+id/btn_remove_product"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:src="@drawable/ic_delete"
                android:scaleType="center"
                android:contentDescription="Remove" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="total"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_rounded"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:visibility="gone"
            tool:visibility="visible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
